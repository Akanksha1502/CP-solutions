#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t=0;
    cin>>t;
    while(t--)
    {
        int n=0;
        cin>>n;
        int a[n];
        for(int i=0; i<n; i++)
        {
            cin>>a[i];
        }
        int counter=0;
            for(int i=0; i<n-1; i++)
            {
            if(a[i]==a[i+1])
            {
                counter++;
            }
            }
            
        cout<<n-counter<<endl;
    }
	// your code goes here
	return 0;
}
