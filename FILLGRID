#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t=0;
    int n=0;
    cin>>t;
    while(t--)
    {
        cin>>n;
        if(n%2==0)
        {
            for(int i=1; i<=n; i++)
           {  
            for(int j=1; j<=n; j++)
            {
                cout<<"-1"<<" ";
            }
            cout<<"\n";
           }
        }
        else
        {
            for(int i=1; i<=n; i++)
            {
                for(int j=1; j<=n; j++)
                {
                    if(i==j)
                    {
                        cout<<"1"<<" ";
                    }
                    else
                    {
                        cout<<"-1"<<" ";
                    }
                }
                cout<<"\n";
            }
        }
    }
	// your code goes here
	return 0;
}
