#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t=0;
    cin>>t;
    while(t--)
    {
        int n=0;
        int MOD=1000000007;
        string s;
        int ans=1;
        cin>>n;
        cin>>s;
        for(int i=0; i<n; i++)
        {
            if(s[i]=='c' || s[i]=='g'  || s[i]=='l' || s[i]=='r')      
            {
            ans*= 2;
            ans%= MOD;
            }
        }
        cout<<ans<<endl;
    }
    
	// your code goes here
	return 0;
}
